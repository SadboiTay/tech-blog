<article class="post-card">
    <div class="post-header">
        <a href="/post/{{id}}">
            <h2 class="post-title">
                {{title}}
            </h2>
        </a>
        <div class="post-meta">
            Posted by <strong>{{user.username}}</strong> on {{created_at}}
        </div>
    </div>
    <div class="post-body">
        {{post_content}}
    </div>
</article>