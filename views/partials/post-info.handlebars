<article class="card">
    <div class="card-header">
        <a href="/post/{{id}}">
            <h2 class="card-title">
                {{title}}
            </h2>
        </a>
        <div class="card-meta">
            Posted by <strong>{{user.username}}</strong> on {{created_at}}
        </div>
    </div>
    <div class="card-body">
        {{post_content}}
    </div>
</article>